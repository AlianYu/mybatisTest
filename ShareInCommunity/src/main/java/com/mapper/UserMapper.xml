<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dao.UserDao" >
  <resultMap  id="user" type="com.entity.User">
      <id column="user_id" property="userId"/>
      <result column="user_name" property="userName"/>
      <result column="user_pwd" property="userPwd"/>
      <result column="user_tel" property="userTel"/>
      <result column="user_grade" property="userGrade"/>
      <result column="user_balance" property="userBalance"/>
      <result column="user_regtime" property="userRegtime"/>
      <result column="user_logofftime" property="userLogofftime"/>
  </resultMap>

  <!-- 通过姓名找User信息 -->
  <select id="findAll" resultMap="user">
    select * from t_user2
  </select>
  
</mapper>